# Function to export encrypted environment (for CI/CD)
function blux10k_export_encrypted() {
    if [[ $BLUX10K_ENCRYPTION_ENABLED -eq 1 ]] && command -v gpg >/dev/null 2>&1; then
        if [[ -n "$BLUX10K_GPG_RECIPIENT" ]]; then
            echo "ğŸ” Exporting encrypted environment..."
            env | gpg --encrypt --recipient "$BLUX10K_GPG_RECIPIENT" --armor \
                > "$BLUX10K_BACKUP_DIR/env-$(date +%Y%m%d-%H%M%S).asc"
            echo "âœ… Encrypted environment saved"
        else
            echo "âŒ GPG recipient not configured"
            return 1
        fi
    else
        echo "âŒ Encryption not enabled or gpg not available"
        return 1
    fi
}

# Function to rotate sensitive keys
function blux10k_rotate_keys() {
    echo "ğŸ”„ Key Rotation Utility"
    echo "âš ï¸  This will guide you through rotating sensitive keys"
    echo ""
    
    local keys_to_rotate=(
        "GITHUB_TOKEN:GitHub Personal Access Token"
        "OPENAI_API_KEY:OpenAI API Key"
        "AWS_ACCESS_KEY_ID:AWS Access Key"
        "DOCKERHUB_TOKEN:Docker Hub Token"
        "NPM_TOKEN:NPM Token"
    )
    
    for key_info in "${keys_to_rotate[@]}"; do
        local key="${key_info%%:*}"
        local description="${key_info##*:}"
        
        if [[ -n "${(P)key}" && "${(P)key}" != *"xxxxxxxx"* ]]; then
            echo "ğŸ”„ $description ($key):"
            read -r "response?   Rotate this key? [y/N] "
            if [[ "$response" =~ ^[Yy]$ ]]; then
                read -r "new_value?   Enter new value (or press Enter to skip): "
                if [[ -n "$new_value" ]]; then
                    export "$key"="$new_value"
                    echo "   âœ… Key updated"
                else
                    echo "   â­ï¸  Skipped"
                fi
            fi
            echo ""
        fi
    done
    
    echo "âœ… Key rotation complete"
    echo "ğŸ’¡ Remember to update services where these keys are used!"
}

