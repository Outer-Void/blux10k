# Function to validate environment security
function blux10k_validate_env() {
    local errors=0
    local warnings=0
    
    echo "ğŸ” BLUX10K v4.0.0 Environment Security Audit"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
    # 1. Directory Security Check
    echo "ğŸ“ Directory Permissions:"
    local dirs=(
        "$XDG_CONFIG_HOME"
        "$XDG_CONFIG_HOME/private"
        "$BLUX10K_CONFIG_DIR"
        "$HOME/.ssh"
        "$GNUPGHOME"
    )
    
    for dir in "${dirs[@]}"; do
        if [[ -d "$dir" ]]; then
            local perms=$(stat -f "%A" "$dir" 2>/dev/null || stat -c "%a" "$dir" 2>/dev/null)
            if [[ "$perms" != "700" ]]; then
                echo "  âš ï¸  $dir: permissions $perms (should be 700)"
                ((warnings++))
            else
                echo "  âœ… $dir: permissions $perms"
            fi
        else
            echo "  âŒ $dir: directory not found"
            ((errors++))
        fi
    done
    
    # 2. File Security Check
    echo ""
    echo "ğŸ“„ File Permissions:"
    local files=(
        "$HOME/.config/private/env.zsh"
        "$HOME/.ssh/id_ed25519"
        "$HOME/.ssh/id_ed25519.pub"
        "$HOME/.gnupg/private-keys-v1.d/*"
    )
    
    for file in "${files[@]}"; do
        if [[ -f "$file" ]] || [[ -d "$file" ]]; then
            local perms=$(stat -f "%A" "$file" 2>/dev/null || stat -c "%a" "$file" 2>/dev/null)
            if [[ "$perms" != "600" && "$perms" != "700" ]]; then
                echo "  âš ï¸  $file: permissions $perms (should be 600/700)"
                ((warnings++))
            else
                echo "  âœ… $file: permissions $perms"
            fi
        fi
    done
    
    # 3. Sensitive Variable Check
    echo ""
    echo "ğŸ” Sensitive Variables:"
    local sensitive_patterns=(
        '^sk-'
        '^ghp_'
        '^glpat-'
        '^AKIA'
        '^dop_v1_'
        '^pypi-'
        '^npm_'
    )
    
    local exposed_vars=()
    for var in $(env | cut -d= -f1); do
        for pattern in "${sensitive_patterns[@]}"; do
            if [[ "${(P)var}" =~ $pattern ]]; then
                exposed_vars+=("$var")
                break
            fi
        done
    done
    
    if [[ ${#exposed_vars[@]} -gt 0 ]]; then
        echo "  âš ï¸  Found ${#exposed_vars[@]} potentially exposed sensitive variables"
        for var in "${exposed_vars[@]}"; do
            echo "     â€¢ $var"
        done
        ((warnings++))
    else
        echo "  âœ… No exposed sensitive variables detected"
    fi
    
    # 4. Example Value Detection
    echo ""
    echo "ğŸ”„ Example Value Check:"
    local example_vars=0
    for var in GITHUB_TOKEN OPENAI_API_KEY AWS_ACCESS_KEY_ID; do
        if [[ -n "${(P)var}" && "${(P)var}" == *"xxxxxxxx"* ]]; then
            echo "  âš ï¸  $var: Using example/template value"
            ((example_vars++))
            ((warnings++))
        fi
    done
    
    if [[ $example_vars -eq 0 ]]; then
        echo "  âœ… No example values detected"
    fi
    
    # 5. Encryption Status
    echo ""
    echo "ğŸ” Encryption Status:"
    if [[ $BLUX10K_ENCRYPTION_ENABLED -eq 1 ]]; then
        if command -v gpg >/dev/null 2>&1; then
            if [[ -n "$BLUX10K_GPG_KEY_ID" && "$BLUX10K_GPG_KEY_ID" != "YOUR_GPG_KEY_ID" ]]; then
                echo "  âœ… GPG encryption enabled (key: $BLUX10K_GPG_KEY_ID)"
            else
                echo "  âš ï¸  GPG encryption enabled but key not configured"
                ((warnings++))
            fi
        else
            echo "  âŒ GPG encryption enabled but gpg not installed"
            ((errors++))
        fi
    else
        echo "  âš ï¸  Encryption not enabled (consider enabling for sensitive data)"
        ((warnings++))
    fi
    
    # 6. Audit Logging
    echo ""
    echo "ğŸ“ Audit Logging:"
    if [[ -f "$BLUX10K_AUDIT_LOG" ]]; then
        local log_size=$(du -h "$BLUX10K_AUDIT_LOG" 2>/dev/null | cut -f1)
        local log_age=$(($(date +%s) - $(stat -c %Y "$BLUX10K_AUDIT_LOG" 2>/dev/null || echo 0)))
        echo "  âœ… Audit log active (size: $log_size, age: $((log_age/86400)) days)"
    else
        echo "  âš ï¸  Audit log not found"
        ((warnings++))
    fi
    
    # Summary
    echo ""
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo "ğŸ“Š Security Audit Summary:"
    echo "  â€¢ Errors:   $errors"
    echo "  â€¢ Warnings: $warnings"
    
    if [[ $errors -eq 0 && $warnings -eq 0 ]]; then
        echo "  âœ… Environment security: EXCELLENT"
    elif [[ $errors -eq 0 && $warnings -gt 0 ]]; then
        echo "  âš ï¸  Environment security: GOOD (with warnings)"
    else
        echo "  âŒ Environment security: NEEDS ATTENTION"
    fi
    
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
    # Recommendations
    if [[ $warnings -gt 0 || $errors -gt 0 ]]; then
        echo ""
        echo "ğŸ’¡ Recommendations:"
        [[ $errors -gt 0 ]] && echo "  â€¢ Fix critical errors immediately"
        [[ $warnings -gt 0 ]] && echo "  â€¢ Review warnings and improve security"
        echo "  â€¢ Run: chmod 600 ~/.config/private/env.zsh"
        echo "  â€¢ Run: chmod 700 ~/.ssh"
        echo "  â€¢ Enable encryption: BLUX10K_ENCRYPTION_ENABLED=1"
        echo "  â€¢ Regular audits: b10k audit-env"
    fi
    
    return $errors
}

# Function to mask sensitive values in output
function blux10k_mask_secrets() {
    local output="$1"
    # Comprehensive secret masking patterns
    output=$(echo "$output" | sed -E '
        s/(sk-|sk-proj-)[a-zA-Z0-9_\-]{20,}/\1***MASKED***/g
        s/(ghp_|gho_|ghu_|ghs_|ghr_)[a-zA-Z0-9_]{36}/\1***MASKED***/g
        s/(glpat-|glrt-)[a-zA-Z0-9_\-]{20,}/\1***MASKED***/g
        s/AKIA[0-9A-Z]{16}/AKIA***MASKED***/g
        s/(dop_v1_|dop_v1_test_)[a-zA-Z0-9_\-]{64}/\1***MASKED***/g
        s/(pypi-|npm_|cargo-)[a-zA-Z0-9_\-]{40,}/\1***MASKED***/g
        s/(xoxb-|xoxp-|xoxa-|xoxr-)[a-zA-Z0-9_\-]{24,}/\1***MASKED***/g
        s/hf_[a-zA-Z0-9_]{20,}/hf_***MASKED***/g
        s/(dt0c01\.|dt0c02\.)[a-zA-Z0-9_\-\.]{40,}/\1***MASKED***/g
        s/(NRAK-|NRAA-)[a-zA-Z0-9_\-]{20,}/\1***MASKED***/g
        s/(op\.|op://)[a-zA-Z0-9_\-\.\/]+/\1***MASKED***/g
        s/(bws_|bwsession-)[a-zA-Z0-9_\-]{20,}/\1***MASKED***/g
        s/(PMAK-|PMAT-)[a-zA-Z0-9_\-]{40,}/\1***MASKED***/g
        s/(pk_|sk_live_|sk_test_)[a-zA-Z0-9_\-]{20,}/\1***MASKED***/g
        s/(eyJ|Ymx1eDEway)[a-zA-Z0-9_\-]{20,}/***MASKED_JWT***/g
        s/-----BEGIN PRIVATE KEY-----[a-zA-Z0-9\+\/\=]+-----END PRIVATE KEY-----/***MASKED_PRIVATE_KEY***/g
    ')
    echo "$output"
}

